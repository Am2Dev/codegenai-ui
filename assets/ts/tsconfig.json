{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "outDir": "../js",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2015", "DOM"]
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ]
} 